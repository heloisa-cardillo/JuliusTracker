<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
      android:id="@+id/JuliusTraker"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Julius Traker"
      android:textColor="@color/black"
      android:textSize="32dp"
      android:layout_marginTop="12dp"
      android:layout_marginStart="60dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/Calendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="58dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/JuliusTraker"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Mes e ano"
        android:textColor="@color/black"/>

  <ImageView
      android:id="@+id/Lupa"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:src="@drawable/lupa"
      app:layout_constraintStart_toStartOf="@id/JuliusTraker"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="24dp"
      android:layout_marginStart="240dp"/>

  <ImageView
      android:id="@+id/mais"
      android:layout_width="54dp"
      android:layout_height="54dp"
      android:src="@drawable/moreinsquad"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginBottom="24dp"
      android:layout_marginEnd="24dp"/>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="100dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="16dp"
      app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"

  <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Data"
        android:textColor="@color/black"/>
  <TextView
      android:id="@+id/peso"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20dp"
      app:layout_constraintTop_toBottomOf="@id/data"
      android:layout_marginStart="16dp"
      app:layout_constraintStart_toStartOf="parent"
      android:text="x gramas"
      android:textColor="@color/black"/>
  <TextView
      android:id="@+id/cantar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      app:layout_constraintTop_toBottomOf="@id/peso"
      android:layout_marginStart="16dp"
      app:layout_constraintStart_toStartOf="parent"
      android:text="Ele cantou!"
      android:textColor="@color/black"/>
  <ImageView
      android:id="@+id/seta"
      android:layout_width="5dp"
      android:layout_height="10dp"
      android:src="@drawable/seta"
      app:layout_constraintTop_toBottomOf="@id/Lupa"
      app:layout_constraintStart_toStartOf="@id/Lupa"
      android:layout_marginTop="60dp"/>
  <View
      android:id="@+id/linha"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:src="@drawable/divider"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/cantar"
      android:layout_marginTop="16dp"
      android:background="@color/black"/>
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>